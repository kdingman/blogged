{{! Signup Form }}
<section class="sign-up">
    <div class="form-heading">
        <h2>Sign Up</h2>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup">Username:</label>
                <input type="text" class="entry" id="username-signup" />
            </div>
            <div>
                <label for="email-signup">Email:</label>
                <input type="text" class="entry" id="email-signup" />
            </div>
            <div>
                <label for="password-signup">Password:</label>
                <input type="password" class="entry" id="password-signup" />
            </div>
            <div>
                <button type="submit" class="signup-btn">Sign Up</button>
            </div>
        </form>
    </div>
<a href="/login" class="login-link">Click Here to Login</a>
</section>

<script src="/public/javascript/signup.js"></script>