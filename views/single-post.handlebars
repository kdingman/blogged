<div class="card">
    <div class="card-header flex-row justify-space between">
        <h2>
            <a href="/post/{{post.id}}">
            <div class="col-8">{{post.title}}</div>
            </a>
        </h2>
        <div class="col-3">Posted By {{post.user.username}} on {{format_date post.created_at}}</div>
    </div>
    <p class="card-body">
        {{post.content}}
    </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
{{#if loggedIn}}
<div class="card">
    <div class="card-header"></div>
    <form class="card-body" id="comment-form">
        <p class="form-label">Comment: </p>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
        <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
{{/if}}

{{> comments  post.comments}}

</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}