<article>
    <a href="/dashboard">&larr; Back to Dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <br><br>
            <textarea id="post-content" name="post-content"></textarea>
            <p>{{post.comment}}</p>
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Update Post</button>
        <button type="button" class="delete-btn-post">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit" class="comment-btn">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/public/javascript/edit-post.js"></script>
<script src="/public/javascript/comment.js"></script>
<script src="/public//javascript/delete-post.js"></script>