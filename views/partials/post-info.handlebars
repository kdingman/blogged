<div class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">
                <div class="col-8">{{title}}</div>
            </a>
        </h2>
        <div class="col-3">Posted By {{user.username}} on {{format_date created_at}}</div>
    </div>
    <p class="card-body">
        {{content}}
    </p>
</div>