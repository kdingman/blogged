<article>
    <a href="/dashboard">&larr;To Dashboard</a>
<div class="card">
    <h2 class="card-header">Edit Post</h2>
    <form class="card-body" id="edit-post-form">
        <div>
            <label class="form-label">Title: </label>
            <input class="form-input" type="text" name="post-title" value="{{post.title}}"/>
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
            <button class="btn btn-secondary" type="submit">Edit</button>
            <button class="btn btn-secondary" type="click" id="delete-btn">Delete</button>
         </form>
        </div>
</div>
</article>

<form class="comment-form">
    <div class="card">
        <textarea class="card-body"name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/comment.js"></script>
<script src="/javascript/delete-post.js"></script>